// Import all partials
@require './_*.styl'

/* APP */

/* Header */
.main-header {
  background-color: #222;
  padding: 20px;
  color: white;
  .header-wrap {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
  }
}

/* Header Title */
.header__title {
  display: flex;
  flex-direction: column;
  align-items: center;
  &--logo {
    animation: App-logo-spin infinite 20s linear;
    height: 40px;
  }
  &--name {
    font-size: 2rem;
    margin: 1rem 0;
  }
}

/* HEader Menu */
.header__menu {
  display: flex;
  justify-content: space-between;
  align-items: center;
  a {
    font-size: 2rem;
    text-decoration: none;
    color: #fff;
    margin-left: 2rem;
  }
}

/* Footer */
footer {
  background: #191324;
  padding: 2%;
  color: #fff;
  text-align: center;
}

@keyframes App-logo-spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}
