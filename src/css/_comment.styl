.comment {
    border-bottom: 1px solid #EDEEED;
    padding: 0.5rem 0;
    p {
        font-size: 1.2rem;
        margin: 0;
        .remove-comment {
            background: none;
            border: 0;
            line-height: 1;
            opacity: 0;
            &:hover {
                color: red;
            }
        }
    }
    strong {
        color: #125688;
        margin-right: 5px;
    }
    &:hover {
        .remove-comment {
            opacity: 1;
        }
    }
}

.comment-form {
    width: 100%;
    border: 0;
    font-size: 1.3rem;
    padding: 1rem 0;
    border-bottom: 1px solid #EDEEED;
}